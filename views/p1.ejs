    // Initialize the application
    document.addEventListener('DOMContentLoaded', () => {
        const skillCards = document.querySelectorAll('.skill-card');
        const modal = document.getElementById('videoModal');
        const modalContent = document.getElementById('modalContent');
        const closeModal = document.getElementById('closeModal');
        let currentSkill = null;
    
        // Add click event listeners to skill cards
        skillCards.forEach(card => {
            card.addEventListener('click', () => {
                const skillId = card.dataset.skill;
                currentSkill = skillId;
                openVideoModal(skillId);
            });
        });
    
        // Close modal when clicking the close button
        closeModal.addEventListener('click', () => {
            modal.style.display = 'none';
            modalContent.innerHTML = ''; // Clear modal content
        });
    
        // Close modal when clicking outside
        window.addEventListener('click', (e) => {
            if (e.target === modal) {
                modal.style.display = 'none';
                modalContent.innerHTML = ''; // Clear modal content
            }
        });
    
        // Function to open video modal
        function openVideoModal(skillId) {
            const videos = videoData[skillId];
            if (!videos) return;
    
            const skillTitle = getSkillTitle(skillId);
            
            // Create modal content
            let modalHtml = `
                <h2>${skillTitle} Videos</h2>
                <div class="video-grid">
            `;
    
            videos.forEach(video => {
                modalHtml += `
                    <div class="video-card">
                        <div class="video-thumbnail">
                            <img src="${video.thumbnail}" alt="${video.title}">
                            <div class="play-button" data-youtube-id="${video.youtubeId}">
                                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="white" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
